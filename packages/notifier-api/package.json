{
  "name": "@alwatr/notifier-api",
  "version": "1.0.0",
  "description": "Alwatr Telegram Notify Microservice, Distributed simple and fast telegram notify nanoservice.",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "private": true,
  "type": "module",
  "keywords": [
    "telegram",
    "api",
    "microservice",
    "nanoservice",
    "typescript",
    "alwatr"
  ],
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    }
  },
  "license": "AGPL-3.0-only",
  "files": [
    "**/*.{js,mjs,cjs,map,d.ts,html,md}",
    "!demo/**/*"
  ],
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/notifier",
    "directory": "packages/notifier-api"
  },
  "homepage": "https://github.com/Alwatr/notifier#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/notifier/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "nano-build": {
    "external": [
      "grammy"
    ]
  },
  "scripts": {
    "s": "yarn run start",
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "cw": "yarn run clean && yarn run watch",
    "d": "yarn run build:es && DEBUG=1 yarn node",
    "start": "yarn build && yarn serve",
    "build": "yarn run build:ts && yarn run build:es",
    "build:es": "nano-build --preset=microservice",
    "build:ts": "tsc --build",
    "watch": "yarn run build --watch",
    "clean": "rm -rfv dist *.tsbuildinfo",
    "serve": "yarn node --enable-source-maps dist/main.mjs",
    "serve:debug": "yarn node --inspect --enable-source-maps dist/main.mjs"
  },
  "dependencies": {
    "grammy": "^1.30.0"
  },
  "devDependencies": {
    "@alwatr/nano-build": "^2.0.2",
    "@alwatr/prettier-config": "^1.0.6",
    "@alwatr/tsconfig-base": "^1.3.2",
    "@alwatr/type-helper": "^2.0.2",
    "@types/node": "^22.7.7",
    "alwatr": "^2.0.3",
    "typescript": "^5.6.3"
  }
}
